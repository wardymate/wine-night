<%= form_for @event do |f| %>
  <h3>Event Details</h3>
  <div class="form-group">
    <%= f.label :venue %>
    <%= f.text_field :venue, :autofocus => true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_select :date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :guest_number %>
    <%= f.number_field :guest_number, class: 'form-control' %>
  </div>
  <%= f.submit 'Create Event', :class => 'button right' %>
<% end %>
