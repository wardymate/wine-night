<%= link_to 'New Event', new_event_path, class: 'btn btn-primary' %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Venue</th>
      <th>Guests</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
    <tr>
      <td><%= link_to event.date.strftime('%A %_d %B'), event_path(event)  %></td>
      <td><%= event.venue %></td>
      <td><%= event.guest_number %></td>
    </tr>
  <% end %>
  </tbody>
</table>
